{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "~core/*": ["app/core/*"],
      "~safe/*": ["app/safe/*"],
      "~layout/*": ["app/layout/*"],
      "~store/*": ["app/store/*"]
    },
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"]
  }
}
